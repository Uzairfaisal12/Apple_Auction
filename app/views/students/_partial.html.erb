<%= form_for @student do |f| %>

  <%if @student.errors.any?%>
    <h2><%=pluralize(@student.errors.count, "error")%>  Some are generating:</h2>
    <ul>
      <%@student.errors.full_messages.each do |message|%>
        <li><%= message%></li>
      <%end%>
    </ul>
  <%end%>

  <%= f.label :name %><br>
  <%= f.text_field :name%><br>
  <br>
  <%= f.label :number %>
  <br>
  <%= f.text_area  :number %><br>
  <br>
  <%= f.submit "Submit Details"%>

<% end %>
